main
  background-color: white
  padding: 5em 0

article
  margin: auto
  max-width: 1024px
  padding: 0 1em

  h1, h2, .h1
    line-height: 1

  .h1
    font-size: 2em
    margin: .67em 0

  @media (max-width: 767px)
    h1, .h1
      font-size: 1.8em
      text-align: left !important

  h6
    font-size: 1em
    margin: 0

  p
    font-weight: 300

  a
    color: syrinx_blue
    &.logoLink
      background-color: transparent !important
    &.textLink
      background-color: transparent !important
      color: black
    &:hover
      color: white
      //color: #000
      color: syrinx_orange
      text-decoration: none

  .lead
    text-align: center
    text-transform: capitalize
    margin-bottom: 1.5em

    span
      background-color: syrinx_blue
      color: white
      padding: 0 .5em
      box-shadow: 1px 1px 3px #333

  p.lead
    text-align: left
    text-transform: none
    margin-bottom: 1em
    font-size: 1.5em
    line-height: 1.5
    @media (max-width: 767px)
      font-size: 1.3em

  .buttonLink
    background-color: #fd9d27
    color: white
    display: inline-block
    font-family: oswald
    font-weight: 400
    text-decoration: none
    padding: .5em 1em
    transition: all 0.1s ease
    text-transform: uppercase
    letter-spacing: 0.1em
    @media (max-width: 767px)
      padding: .3em .67em
      margin-bottom: 1em

    i
      font-size: 1.2em
      margin-left: .5em

    &:hover
      color: #fff
      transform: scale(1.1, 1.1)

  .caseStudy
    width: 100%
    display: block
    text-decoration: none
    background-size: cover
    background-position: center center
    background-repeat: no-repeat
    box-shadow: 1px 1px 3px #333

    h1,.h1
      color: silver !important
      text-align: center
      line-height: 300px
      background-color: rgba(0, 0, 0, .67)
      transition: all .5s ease
      &:hover
        color: white !important
        text-shadow: 1px 1px 1px black
        background-color: rgba(0, 0, 0, .5)

  .profilePic
    float: right
    margin-left: 1em
    margin-bottom: 1em
    box-shadow: 1px 1px 3px black
    border-radius: 50%
    border: 1px solid silver
    padding: 3px

  p.meta
    font-style: italic
    font-size: .9em

    i
      color: syrinx_blue
      display: inline-block
      width: 1.5em

    span
      background-color: syrinx_blue
      color: white
      padding: 0 .33em
      box-shadow: 1px 1px 3px #333

  .apply-btn
    background-color: syrinx_orange
    color: #fff !important
    text-decoration: none
    padding: .5em 1em
    margin-top: .5em
    display: inline-block
    font-family: 'Oswald', sans-serif
    transition: all 0.1s ease
    text-transform: uppercase;
    letter-spacing: .1em;

    &:hover
      transform: scale(1.1, 1.1)
      background-color: syrinx_blue !important

    i
      margin-left: .33em
      font-size: 1.2em

  #contact-form input, #contact-form textarea
    width: 100%
    margin-bottom: 2em

  #contact-form textarea
    height: 6em

  #contact-form label
    font-size: .75em
    font-family: 'Oswald', sans-serif
    color: silver

  .red
    color: red

  iframe
    margin-top: 2em
    margin-bottom: 2em

  p.date
    font-size: .9em
    font-style: italic
    margin-top: -1em

  blockquote
    p
      background-color: syrinx_blue
      display: inline-block
      color: white
      font-size: 1.5em
      line-height: 1.33
      font-style: italic
      transform: rotate(-1deg)
      padding: 0 .5em
      box-shadow: 1px 1px 3px #333
      margin-bottom: 1em
      &:before
        content: "\201C"
      &:after
        content: "\201D"

  hr
    border: none
    border-top: 1px LightSteelBlue dashed
    margin: 3em 1.5em

  .service ul
    margin: 0
    padding: 0

  iframe.youtube
    float: right
    margin: 0 0 1em 1em
    @media (max-width: 767px)
      float: none

  video
    float: right
    border: 1px solid silver
    box-shadow: 1px 1px 3px silver
    padding: 3px
    margin: 1em 0 1em 1em
    width: 50%

.imgBox
  background-position: center center
  background-repeat: no-repeat
  background-size: contain
  width: 15%
  height: 100px
  margin: 2.5%
  display: inline-block
  @media (max-width: 767px)
    width: 45%

body.blog main article
  p:first-of-type
    margin-bottom: 1em
    font-size: 1.5em
    line-height: 1.5
    @media (max-width: 767px)
      font-size: 1.3em
  img
    float: right
    border: 1px solid silver
    transform: rotate(2deg)
    box-shadow: 1px 1px 3px silver
    padding: 3px
    margin: 1em 0 1em 1em
    max-width: 33%
    max-height: 300px
    transition: all 0.1s ease
    &:hover
      transform: scale(1.1, 1.1)

@media (max-width: 767px)
  main
    padding: 3em 0

body.xamarin
  i.fa-chevron-right
    color: #fd9d27

  ul
    list-style-type: none
    margin-left: 0
    padding-left: 0


  i.fa-check, i.fa-chevron-right
    color: #fd9d27
    margin-right: .5em
    text-shadow: 1px 1px 1px #999

  blockquote p
    font-size: 1.33em

  .screenshot
    float: right
    height: 10em
    margin-left: 1em
    margin-bottom: 3em
    transform: rotate(2deg)
    @media (max-width: 500px)
      display: block
      width: 80%
      height: auto
      padding: 0 10%
      margin-top: 0
      margin-bottom: 2em

  .straight
    transform: none
    height: 12em
    margin-top: -3em

  .left
    float: left
    margin-left: 0
    margin-right: 2em
    transform: rotate(-2deg)

  #xamarin-visual-studio-test-cloud
    margin-left: 44px;
    margin-top: -22px;

  #end-to-end
    margin-top: -11px;

.imgHeading
  img
    float: left
    width: 50px
    height: 50px

  h2
    position: relative
    font-family: oswald
    font-weight: 700
    font-size: 24px
    top: 18px
    left: 10px

.more
  text-align: center

.more a
  font-weight: 700
  background-color: #fd9d27
  font-family: 'Oswald', sans-serif
  color: white !important
  text-decoration: none
  font-size: 1.33em
  padding: .33em .5em
  transition: all 0.1s ease
  display: inline-block
  box-shadow: 1px 1px 3px #333

.more a:hover
  transform: scale(1.1, 1.1)

.more a i
  margin-left: .33em
  font-size: 1.33em

@media (max-width: 767px)
  .mobile-hide
    display: none

#case-studies
  text-align: center

  .case-study-items
    margin-left: -10px
    margin-right: -10px
    @media (max-width: 767px)
      margin-left: 0
      margin-right: 0

  .case-study-item
    margin-top: 10px
    margin-bottom: 10px

    .item-wrap
      margin: 0 10px

    a
      display: table
      background-size: cover
      background-position: center center
      background-repeat: no-repeat
      height: 300px
      text-decoration: none
      position: relative
      width: 100%

      &:hover .item-title
        color: #fff !important
        text-shadow: 1px 1px 1px #000
        background-color: rgba(0,0,0,0.5)

    .item-title
      display: table-cell
      color: #c0c0c0 !important
      font-size: 22px
      line-height: 1.25
      text-align: center
      background-color: rgba(0,0,0,0.67)
      margin: 0
      padding-right: 10px
      padding-left: 10px
      transition: all .5s ease
      vertical-align: middle

    @media (max-width: 767px)
      a
        height: 150px
        margin-right: 0
        margin-left: 0

body.home
  #features
    text-align: center

    .feature-items
      margin-left: -10px
      margin-right: -10px
      @media (max-width: 767px)
        margin-left: 0
        margin-right: 0

    .feature-item
      margin-top: 10px
      margin-bottom: 10px

      .item-wrap
        margin: 0 10px
        @media (max-width: 767px)
          margin-left: 0
          margin-right: 0

      .item-icon
        display: inline-block
        font-size: 3em
        line-height: 1

      .item-text
        max-width: 360px
        margin-right: auto
        margin-left: auto

      .item-title
        font-size: 22px

      .buttonLink
        margin-top: 1em

    .feature-item-1,.feature-item-3
      .item-text
        @media (min-width: 810px)
          max-width: 260px

  h1
    font-size: 45px
    font-weight: 500
    margin-bottom: 0
    text-align: center !important

  article p.lead
    font-size: 1.25em
    margin-bottom: 2.5em
    text-align: center

  .imgBox
    width: 11%
    height: 100px
    margin: 1% 2.5%

    @media (max-width: 767px)
      width: 45%

  p.billboard-buttons
    a.buttonLink
      font-size: 1.3em

      &:hover,&:focus
        background-color: syrinx_blue

body.services
  h1
    font-size: 45px
    font-weight: 500
    margin-bottom: 0
    text-align: center !important

  article
    p.lead
      font-size: 1.25em
      margin-bottom: 2.5em
      text-align: center

  .imgHeading
    display: block
    margin-bottom: 1.25em
    position: relative
    clearfix()

    img
      float: left
      width: 50px
      height: 50px

    h2
      font-size: 1.5em
      margin: 0
      position: relative
      top: 18px
      left: 10px
      @media (max-width: 767px)
        position: absolute
        top: 50%;
        left: 60px
        transform: translateY(-50%);

  #services
    text-align: center

    .feature-items
      margin-top: 2.5em
      margin-left: -10px
      margin-right: -10px
      @media (max-width: 767px)
        margin-left: 0
        margin-right: 0

    .feature-item
      margin-top: 15px
      margin-bottom: 15px

      a.item-wrap
        color: #000
        text-decoration: none

      .item-wrap
        border: 1px solid #ccc
        display: block
        margin: 0 10px
        padding: 18px 18px
        @media (max-width: 767px)
          margin-left: auto
          margin-right: auto
          max-width: 360px

      .item-icon
        display: inline-block
        font-size: 3em
        line-height: 1

      .item-text
        max-width: 360px
        margin-right: auto
        margin-left: auto

      .item-title
        font-size: 22px

      .item-read-more
        margin-top: 1em
        text-transform: uppercase;

  #approach
    text-align: center

    h2
      text-align: center !important

  #case-studies
    .case-study-item
      a
        height: 240px
        @media (max-width: 767px)
          height: 150px

      .item-title
        font-size: 20px